 <%- include('../partials/header') %>
<%- include('../partials/nav_bar') %>

<main class="container column-layout">
 
      
      <h1><%= title %></h1> 
      <hr>
      <a href='/jogos/palpites/extras/<%= bolao._id %>'><button class='btn'><i class="fas fa-comment-dots"></i> VISUALIZAR PALPITES EXTRAS</button></a>
      <hr>
      
      <table id='table' class="table table-hover">
          <thead>
              <tr>              
              <th scope="col">Time Mandante</th>
              <th scope="col"> </th>
              <th scope="col"> </th>              
              <th scope="col">x</th>
              <th scope="col"> </th>
              <th scope="col"> </th>              
              <th scope="col">Time Visitante </th>              
              <th scope="col">Visualizar Palpites</th>
              </tr>
          </thead>
          <tbody>
                <% bolao.jogos.forEach(jogo => { %>
                <% var dataJogo = new Date(jogo.date); dataJogo.setHours(1,0,0,0); %>
                <% var today = new Date(); today.setHours(1,0,0,0); %>
                    <% if(today >= dataJogo) { %>      
                    <tr>
                        <td style='text-align:center;vertical-align:middle'><%= jogo.time1 %></td>
                        <td style='text-align:center;vertical-align:middle'><% bolao.times.forEach(img => { %> <% if(jogo.time1 == img.name) { %> <img src="<%= img.img %>" class="rounded-circle" alt="" style="object-fit:cover;
            width:50px;
            height:50px;
            border: none"/><% }}); %></td>
                        <td style='text-align:center;vertical-align:middle'><%= jogo.resultado_time1 %></td>                                                                        
                        <td style='text-align:center;vertical-align:middle'>x</td>                                             
                        <td style='text-align:center;vertical-align:middle'><%= jogo.resultado_time2 %></td>
                        <td style='text-align:center;vertical-align:middle'><% bolao.times.forEach(img => { %> <% if(jogo.time2 == img.name) { %> <img src="<%= img.img %>" class="rounded-circle" alt="" style="object-fit:cover;
            width:50px;
            height:50px;
            border: none"/><% }}); %></td>   
                        <td style='text-align:center;vertical-align:middle'><%= jogo.time2 %></td>                        
                        <td style='text-align:center;vertical-align:middle'><a href='/jogos/palpites/<%= jogo._id %>'><i class="fas fa-binoculars"></i></a></td>                        
                    </tr>
                    <% } %>
                    <% }); %>
                    
                </tbody>
                </table>
 <%- include('../partials/bottom_nav') %>
  <%- include('../partials/footer') %>